<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="CachingFramework.Redis" Version="15.0.2" />
        <PackageReference Include="Dapper" Version="2.1.4" />
        <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="7.0.4" />
        <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="7.0.0" />
        <PackageReference Include="MiniTwitch.Irc" Version="1.2.7"/>
        <PackageReference Include="MiniTwitch.PubSub" Version="1.0.1"/>
        <PackageReference Include="Npgsql" Version="7.0.6" />
        <PackageReference Include="OneOf" Version="3.0.263" />
        <PackageReference Include="Serilog" Version="3.0.1" />
        <PackageReference Include="Serilog.Enrichers.ClassName" Version="0.2.0" />
        <PackageReference Include="Serilog.Extensions.Logging" Version="7.0.0" />
        <PackageReference Include="Serilog.Formatting.Compact" Version="1.1.0" />
        <PackageReference Include="Serilog.Sinks.Console" Version="4.1.0" />
        <PackageReference Include="Serilog.Sinks.File" Version="5.0.0" />
        <PackageReference Include="Serilog.Sinks.Grafana.Loki" Version="8.1.0" />
    </ItemGroup>

    <ItemGroup>
        <Content Include="Config.json" CopyToOutputDirectory="PreserveNewest" />
        <Content Include="MiniTwitch.Helix.dll" CopyToOutputDirectory="PreserveNewest"/>
    </ItemGroup>

    <ItemGroup>
        <Reference Include="MiniTwitch.Helix">
            <HintPath>MiniTwitch.Helix.dll</HintPath>
        </Reference>
    </ItemGroup>

</Project>